ul
	padding 0
	margin 0
	list-style-type none

	li
		float left
		padding 0
		margin 0

.clearfix
	&:after
		display block
		content ''
		clear both

body
	background #555
	color #5bc0de

#wrapper 
	margin-top 60px

.blog-masthead
	position fixed
	width 100%
	z-index 3
	background-color #5bc0de
	box-shadow 0px -2px 5px rgba(0, 0, 0, 0.1) inset

	.blog-nav
		.form-group
			float right
			width: 50%
			margin-bottom 0

			.form-control
				width 100px!important
				height 30px
				border-radius 1px

			ul
				li
					float: right
					margin-right 3px
					margin-top 3px

		.blog-nav-item
			position relative
			display inline-block
			padding 10px
			font-weight: 500
			color #CDDDEB
		
		.active
			color #fff
.btn-sm
	border-radius 1px

.fa
	font-size 18px

::-webkit-input-placeholder
	font-size 11px
	line-height 18px
	opacity 0.6

:-moz-placeholder
	font-size 11px
	line-height 18px
	opacity 0.6

